{
  "name": "formulasmart",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "generate-assets": "node scripts/generate-logo.js",
    "test": "jest",
    "eas:publish:staging": "eas update --branch staging --message \"staging release\"",
    "eas:publish:production": "eas update --branch production --message \"production release\"",
    "eas:build:staging": "eas build --platform all --profile staging",
    "eas:build:staging:ios": "eas build -p ios --profile staging",
    "eas:build:staging:android": "eas build -p android --profile staging",
    "eas:build:development": "eas build --platform all --profile development",
    "eas:build:production": "eas build --platform all --profile production",
    "check:explanations": "node scripts/list_missing_explanations.js"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/native": "^7.1.25",
    "@react-navigation/native-stack": "^7.8.6",
    "expo": "~54.0.29",
    "expo-status-bar": "~3.0.9",
    "lucide-react-native": "^0.561.0",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "^2.29.1",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "^4.18.0",
    "react-native-svg": "^15.15.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/react": "~19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "jest": "^29.6.1",
    "pngjs": "^6.0.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/__tests__"
    ]
  },
  "private": true
}
